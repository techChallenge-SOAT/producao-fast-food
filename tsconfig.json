{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["es2017", "dom", "es2018.promise"],
    "baseUrl": "./",
    "outDir": "./dist/src",
    "rootDir": "./src",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules"],
  "include": ["./typings/*.d.ts", "src/**/*.ts", "jest.config.js"],
  "typeAcquisition": {
    "enable": false
  }
}
